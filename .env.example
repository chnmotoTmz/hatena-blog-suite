# ================================================
# Hatena Blog Suite - Environment Configuration
# 統合環境設定テンプレート
# ================================================

# === Core Hatena Blog Settings ===
# はてなブログの基本設定
HATENA_ID=your-hatena-id
HATENA_API_KEY=your-hatena-api-key
BLOG_DOMAIN=your-blog.hatenablog.com
HATENA_BLOG_ATOMPUB_KEY=your-atompub-key

# === Image Generation ===
# Bing Image Creator (DALL-E 3) - 無料
# https://www.bing.com/images/create でログイン後、
# 開発者ツールでCookiesから_Uの値を取得
BING_AUTH_COOKIE=your-bing-auth-cookie

# === Google AI Services ===
# Google Gemini API (オプション)
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=your-project-id

# === Affiliate Settings ===
# 楽天アフィリエイト
RAKUTEN_APP_ID=your-rakuten-app-id
RAKUTEN_AFFILIATE_ID=your-rakuten-affiliate-id

# Amazon Associates
AMAZON_ASSOCIATE_ID=your-amazon-associate-id
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key

# === External APIs (Optional) ===
# Imgur (画像ホスティング)
IMGUR_CLIENT_ID=your-imgur-client-id
IMGUR_CLIENT_SECRET=your-imgur-client-secret

# Cohere API
COHERE_API_KEY=your-cohere-api-key

# LINE Bot (通知用)
LINE_TOKEN=your-line-bot-token

# === Server Configuration ===
# MCP Server設定
MCP_SERVER_PORT=8083
FLASK_PORT=8084
API_PORT=8000
FRONTEND_PORT=3000

# === Security ===
# JWT Secret (本番環境では必ず変更)
JWT_SECRET=your-jwt-secret-key

# === Database ===
# ChromaDB (ベクターDB)
CHROMA_DB_PATH=./data/chroma_db
CHROMA_PERSIST_DIRECTORY=./data/chroma_persist

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=./logs/hatena-suite.log

# === Development ===
# 開発環境設定
DEBUG=false
TESTING=false
DEVELOPMENT=false

# === Docker Settings ===
# Docker Compose環境変数
COMPOSE_PROJECT_NAME=hatena-blog-suite
DOCKER_BUILDKIT=1

# === Performance ===
# パフォーマンス設定
MAX_WORKERS=4
TIMEOUT_SECONDS=30
RATE_LIMIT_PER_MINUTE=60

# === Feature Flags ===
# 機能フラグ
ENABLE_AUTO_POSTING=false
ENABLE_IMAGE_GENERATION=true
ENABLE_AFFILIATE_LINKS=false
ENABLE_LINK_CHECKING=true
ENABLE_RAG_FEATURES=true

# ================================================
# Notes / 注意事項:
# 
# 1. 本番環境では .env ファイルを .gitignore に含めてください
# 2. 機密情報は直接コミットしないでください  
# 3. Bing Cookie は2-4週間で期限切れになります
# 4. 無料のサービスでも十分に動作します
# ================================================